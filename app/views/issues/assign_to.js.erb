<% if @user %>
  $('#issue_<%= @issue.id %>').attr('data-assignee-id', '<%= @issue.assignee.id %>')
    .find('.assignee').html('<%= @user.name %>').removeClass('not_assigned');
<% else %>
  $('#issue_<%= @issue.id %>').attr('data-assignee-id', '-1')
    .find('.assignee').html('not assigned').addClass('not_assigned');
<% end %>
$('.assignee').switchAssignee('close');