<ul>
  <% for @project in @projects %>
    <li class="project" data-id="<%= @project.id %>">
      <h3><%= @project.name %></h3>
      <ul class="issues">
        <% if @assignments %>
          <% for issue in @assignments.by_project(@project) %>
            <%= render :partial => "issues/item", :locals => {:issue => issue} %>
          <% end %>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
