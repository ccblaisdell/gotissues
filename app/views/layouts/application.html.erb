<!DOCTYPE html>
<html>
<head>
  <title>GotIssues</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, "switchAssignee.jquery.js" %>
  <%= csrf_meta_tag %>
</head>
<body>
  
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  
  <nav class="clearfix">
    <ul>
      <li><%= link_to "Home", root_url %></li>
      <% if user_signed_in? %>
        <li><%= link_to "Projects", projects_path %></li>
        <li><%= link_to (current_user.try(:name) or current_user.try(:email) or "mystery user"), edit_user_registration_path %></li>
        <li><%= link_to "Sign out", destroy_user_session_url %></li>
      <% else %>
        <li><%= link_to "Sign in", new_user_session_url %></li>
        <li><%= link_to "Register", new_user_registration_url %></li>
      <% end %>
    </ul>
  </nav>
  

<%= yield %>

<% if user_signed_in? %>
  <script>
    var USERS = [
      {name: "no one", id: ""}
      <% for user in User.all %>
        ,{name: "<%= user.name %>", id: "<%= user.id %>"}
      <% end %>
    ]
  </script>
<% end %>
</body>
</html>
